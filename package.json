{
    "name": "youtube-downloader-api",
    "version": "1.0.0",
    "description": "A simple Express API for downloading YouTube videos",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn src/server.ts",
        "dev:nodemon": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
        "watch": "tsc -w",
        "nodemon": "nodemon dist/server.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "youtube",
        "downloader",
        "express",
        "api"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.2",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "yt-dlp-exec": "^1.0.2",
        "ytdl-core": "^4.11.5"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "nodemon": "^3.0.2",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.2"
    }
}
